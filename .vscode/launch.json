{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "jinja": true,
            // "postDebugTask": "Open FastAPI in Browser",
            "preLaunchTask": "Open FastAPI in Browser"
        },
        {
            "name": "Debug React App (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "port": 9222,
            "preLaunchTask": "Open react-app"
        }
    ]
}