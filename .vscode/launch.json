{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug React App (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "port": 9222
        }
    ]
}